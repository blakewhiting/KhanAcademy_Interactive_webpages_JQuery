    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>

    
        $("#leafers").on("click", function(event) {
            
            $("#leafers").css("top", "100px").css("transition", "ease 3s");
        });
        $("#old-leafers").on("click", function(event){
            $("#old-leafers").attr("src", "https://www.kasandbox.org/programming-images/avatars/leafers-seed.png").css("transition", "linear 3s");
        });
        $("#background").on("click", function(event){
            $("#background").attr("src", "https://www.kasandbox.org/programming-images/landscapes/beach-in-hawaii.png");
        });
        
